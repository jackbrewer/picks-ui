//
// TYPEFACES
// Amend variable names to suit fonts used.
//

$font--system = -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'

//
// BASE STYLES
//

$base--font-heading = $font--system
$base--font-body    = $font--system
$base--font-color   = $color--black
$base--font-size    = 16px
$base--line-height  = 1.5
$base--spacing      = rem(20)
$base--body-bg      = $color--white
$base--min-width    = $mq--mobile
$base--max-width    = $mq--desktop

$content--gutter = $base--spacing
$content--gutter--mobile = ($base--spacing / 2)

// Refactor/remove
$base--border-radius = 3px
$main-nav-item--mobile-height = 60px
$pre-header--height = 30px
