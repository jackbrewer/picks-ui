//
// RESPONSIVE MEDIA
// ================
// Predict dimensions of image areas to stop DOM reflow when images/videos load.
// Fills all available width, so ensure media is large enough to fill its container.
//

.responsive-media
  position relative
  height 0
  overflow hidden
  padding-bottom 100% // Default to square
  text-align left // Video in centered text can mis-align

  // Optional visual indication of where the asset should load
  background-color rgba($color--black, 0.1)

  // Ensure images fill placeholder
  & > img
    width 100%

  // A little extra persuasion for responsive video
  & > iframe
    position absolute
    width 100%
    height 100%
