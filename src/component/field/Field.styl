//
// FIELD
// =====
// These lay out controls, labels and additional elements within the context
// of a form
//

.field
  text-align left
  margin-bottom $spacing--default

.field__question
  margin-bottom ($spacing--default / 2)
  display inline-block

.field__assistance
  margin-top ($spacing--default / 2)
  color $color--grey
  font-size 0.9em

.field__feedback
  margin-top ($spacing--default / 2)

  .field--error &
    color $color--error

  .field--success &
    color $color--success

  .field--notice &
    color $color--notice

  .field--warning &
    color $color--warning
