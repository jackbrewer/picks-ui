.site-switch
  white-space nowrap

.site-switch__label
  margin-right rem(10)
  color $color--black
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

  &:hover
  &:active
  &:focus
    color $color--primary
    text-decoration underline

.site-switch__icon
  display inline-block
  vertical-align middle

  svg
    position relative

    + svg
      margin-left -10px

  svg
    width 24px

  svg:nth-child(1)
    z-index 4
    path
      fill $color--blue

  svg:nth-child(2)
    z-index 3
    path
      fill $color--purple

  svg:nth-child(3)
    z-index 2
    path
      fill $color--orange

  svg:nth-child(4)
    z-index 1
    path
      fill $color--yellow
